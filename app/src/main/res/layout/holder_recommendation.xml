<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.doggetdrunk.meetjyou_android.ui.screen.main.home.recommendation.RecommendationModel"/>
        <import type="com.doggetdrunk.meetjyou_android.ui.screen.main.home.recommendation.IRecommendationHolderClickListener"/>

        <variable
            name="model"
            type="com.doggetdrunk.meetjyou_android.ui.screen.main.home.recommendation.RecommendationModel" />

        <variable
            name="listener"
            type="com.doggetdrunk.meetjyou_android.ui.screen.main.home.recommendation.IRecommendationHolderClickListener" />

    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:onClick="@{() -> listener.onClick(model)}">


        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:id="@+id/image"
            app:imageUrl="@{model.imagePath}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:id="@+id/location"
            android:text="@{model.city + ` | ` + model.address}"
            android:textSize="14sp"
            android:textColor="@color/gray300"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location"
            android:layout_alignParentStart="true"
            android:text="@{model.title}"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </RelativeLayout>
</layout>
